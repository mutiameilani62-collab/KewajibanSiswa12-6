    <script>
        const ADMIN_PASS = "mutiameilani07";
        const ADMIN_ID = "25";

        const DB = {
            users: [
                {id: "01", name: "RAKA", phone: "+628986631743"}, {id: "02", name: "AGNES", phone: "+6285225157113"},
                {id: "03", name: "AKHTAR", phone: "+62895376321900"}, {id: "04", name: "ALBANY", phone: "+628985927515"},
                {id: "05", name: "ALYA", phone: "+62882005714709"}, {id: "06", name: "BUNGA", phone: "+6285725789346"},
                {id: "07", name: "APRILA", phone: "+6287710637975"}, {id: "08", name: "TATA", phone: "+62895347084909"},
                {id: "09", name: "CHAYLA", phone: "+62895811076622"}, {id: "10", name: "CINTA", phone: "+6281328143031"},
                {id: "11", name: "DANDRE", phone: "+6281229423738"}, {id: "12", name: "FARAH", phone: "+6289501966883"},
                {id: "13", name: "FIMEL", phone: "+62895618502233"}, {id: "14", name: "HABIBAH", phone: "+6282314817428"},
                {id: "15", name: "INDAH", phone: "+62895336787954"}, {id: "16", name: "KAISYA", phone: "+6281226392247"},
                {id: "17", name: "KANIA", phone: "+628988160854"}, {id: "18", name: "KEYLA", phone: "+6285647405224"},
                {id: "19", name: "KEYZA", phone: "+6281228782968"}, {id: "20", name: "SIFA", phone: "+62895392132000"},
                {id: "21", name: "LUSI", phone: "+6288239133989"}, {id: "22", name: "FEBRI", phone: "+6281225308594"},
                {id: "23", name: "DESTA", phone: "+628813727338"}, {id: "24", name: "VINO", phone: "+6287879701015"},
                {id: "25", name: "MUTI", phone: "+6289524579306"}, {id: "26", name: "NADIN", phone: "+62895341372900"},
                {id: "27", name: "NAJWA", phone: "+6283871718311"}, {id: "28", name: "NAZWA", phone: "+6287847636818"},
                {id: "29", name: "OKTA", phone: "+6281229809301"}, {id: "30", name: "RASSYA", phone: "+6288980610305"},
                {id: "31", name: "FIRA", phone: "+62882008139861"}, {id: "32", name: "JEVERA", phone: "+6287826787356"},
                {id: "33", name: "WISNU", phone: "+6285921498474"}, {id: "34", name: "ZAHRA AWAL", phone: "+6281460401747"},
                {id: "35", name: "NAYLUNA", phone: "+6289503780009"}, {id: "36", name: "SATRIA", phone: "+6289519293937"}
            ],
            bills: { "01": 60000, "02": 50000, "03": 60000, "04": 60000, "05": 0, "06": 100000, "07": 60000, "08": 0, "09": 95000, "10": 60000, "11": 0, "12": 60000, "13": 60000, "14": 80000, "15": 55000, "16": 40000, "17": 35000, "18": 0, "19": 60000, "20": 45000, "21": 0, "22": 85000, "23": 50000, "24": 60000, "25": 0, "26": 50000, "27": 60000, "28": 35000, "29": 45000, "30": 60000, "31": 0, "32": 0, "33": 120000, "34": 40000, "35": 100000, "36": 60000 },
            payments: []
        };

        const app = {
            currentUser: null,
            pendingPayment: null,

            init() { 
                this.switchView('login');
                this.checkFriday();
            },

            checkFriday() {
                // Simulasi cek hari Jumat (Day 5 dalam JS Date)
                const now = new Date();
                const isFriday = now.getDay() === 5 || (now.getFullYear() === 2026 && now.getMonth() === 1 && now.getDate() === 6);
                if (isFriday) {
                    document.getElementById('admin-friday-alert').classList.remove('hidden');
                    document.getElementById('friday-message-student').classList.remove('hidden');
                }
            },

            formatRupiah(n) { return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(n); },
            
            togglePasswordField() {
                const id = document.getElementById('login-id').value;
                document.getElementById('password-container').classList.toggle('hidden', id !== ADMIN_ID);
            },

            handleLogin(e) {
                e.preventDefault();
                const id = document.getElementById('login-id').value.padStart(2, '0');
                const pass = document.getElementById('login-password').value;
                const user = DB.users.find(u => u.id === id);
                if (user) {
                    if (id === ADMIN_ID && pass !== ADMIN_PASS) { Swal.fire('Error', 'Password salah', 'error'); return; }
                    this.currentUser = user;
                    document.getElementById('nav-user-info').classList.remove('hidden');
                    document.getElementById('user-display-name').textContent = user.name;
                    if(id === ADMIN_ID) { this.renderAdminDashboard(); this.switchView('admin'); }
                    else { this.renderStudentDashboard(); this.switchView('student'); }
                } else { Swal.fire('Error', 'ID tidak terdaftar', 'error'); }
            },

            logout() { this.currentUser = null; this.switchView('login'); document.getElementById('nav-user-info').classList.add('hidden'); },
            switchView(v) { ['login', 'student', 'admin'].forEach(x => document.getElementById(`view-${x}`).classList.toggle('hidden', x !== v)); },

            renderStudentDashboard() {
                const bill = DB.bills[this.currentUser.id] || 0;
                document.getElementById('student-bill-amount').textContent = this.formatRupiah(bill);
                const badge = document.getElementById('student-status-badge');
                badge.textContent = bill <= 0 ? 'LUNAS' : 'BELUM LUNAS';
                badge.className = `px-3 py-1 rounded-full text-xs font-bold ${bill <= 0 ? 'bg-green-500' : 'bg-red-500'} text-white uppercase tracking-wider`;
                
                const history = DB.payments.filter(p => p.id === this.currentUser.id).sort((a,b) => new Date(b.date) - new Date(a.date));
                document.getElementById('student-history-list').innerHTML = history.map(p => `
                    <div class="flex justify-between items-center bg-gray-50 p-3 rounded-lg border-l-4 border-indigo-500 mb-2">
                        <div class="flex flex-col text-xs">
                            <span class="text-gray-400">${new Date(p.date).toLocaleString()}</span>
                            <span class="font-bold">${p.method}</span>
                        </div>
                        <span class="font-bold text-indigo-600">-${this.formatRupiah(p.amount)}</span>
                    </div>
                `).join('') || '<p class="text-center text-gray-400 text-xs italic py-10">Belum ada riwayat.</p>';
            },

            renderAdminDashboard() {
                const table = document.getElementById('admin-users-table');
                let totalColl = 0, totalDebt = 0, html = '';
                DB.payments.forEach(p => totalColl += p.amount);
                DB.users.filter(u => u.id !== ADMIN_ID).forEach(u => {
                    const bill = DB.bills[u.id] || 0;
                    totalDebt += bill;
                    html += `
                        <tr class="hover:bg-gray-50 border-b">
                            <td class="px-4 py-3 font-mono font-bold">${u.id}</td>
                            <td class="px-4 py-3 font-medium">${u.name}</td>
                            <td class="px-4 py-3 text-right font-bold ${bill > 0 ? 'text-red-500' : 'text-green-500'}">${this.formatRupiah(bill)}</td>
                            <td class="px-4 py-3 text-center"><span class="text-[10px] font-bold px-2 py-1 rounded ${bill === 0 ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}">${bill === 0 ? 'LUNAS' : 'TUNGGAK'}</span></td>
                            <td class="px-4 py-3 text-center">
                                <button onclick="app.openEditBillModal('${u.id}')" class="text-indigo-600 hover:bg-indigo-50 px-2 py-1 rounded transition"><i class="fa-solid fa-edit"></i></button>
                                <button onclick="app.sendWhatsAppMessage('${u.id}', ${bill})" class="text-green-500 hover:bg-green-50 px-2 py-1 rounded transition"><i class="fa-brands fa-whatsapp"></i></button>
                            </td>
                        </tr>`;
                });
                table.innerHTML = html;
                document.getElementById('admin-total-collected').textContent = this.formatRupiah(totalColl);
                document.getElementById('admin-total-debt').textContent = this.formatRupiah(totalDebt);
            },

            processFinalPayment() {
                const { amount, method } = this.pendingPayment;
                DB.bills[this.currentUser.id] = Math.max(0, (DB.bills[this.currentUser.id] || 0) - amount);
                DB.payments.push({ id: this.currentUser.id, amount, method, date: new Date().toISOString() });
                this.closeInstructionModal();
                this.renderStudentDashboard();
                Swal.fire('Berhasil!', 'Tagihan terupdate otomatis.', 'success');
            },

            openEditBillModal(id) {
                const user = DB.users.find(u => u.id === id);
                document.getElementById('edit-bill-user-name').textContent = `Nama: ${user.name}`;
                document.getElementById('edit-bill-id').value = id;
                document.getElementById('edit-bill-amount').value = DB.bills[id];
                document.getElementById('edit-bill-modal').classList.remove('hidden');
            },
            
            saveBillChange(e) {
                e.preventDefault();
                const id = document.getElementById('edit-bill-id').value;
                DB.bills[id] = parseInt(document.getElementById('edit-bill-amount').value);
                this.closeEditBillModal();
                this.renderAdminDashboard();
                Swal.fire('Update Manual Berhasil', '', 'success');
            },

            sendWhatsAppMessage(id, amount) {
                const user = DB.users.find(u => u.id === id);
                let msg = amount > 0 
                    ? `haiii selamat pagiii jangan lupa hari ini kamu harus membayar kewajiban kamu sebagai siswa kelas 12-6 yaitu tanggungan kas. Kamu masih mempunyai tanggungan kas sebesar *${this.formatRupiah(amount)}*, untuk pembayaran kamu bisa langsung mendatangi bendahara kelas mu yaaa. terimakasihhh ðŸ«¶ðŸ»ðŸ«¶ðŸ»`
                    : `haiiii selamat pagiiii terimakasih karena kamu sudah melakukan pembayaran kas periode ini hingga lunas. suksesss selaluuuðŸ«¶ðŸ»ðŸ«¶ðŸ»`;
                window.open(`https://wa.me/${user.phone.replace(/[^0-9]/g, '')}?text=${encodeURIComponent(msg)}`, '_blank');
            },

            sendFridayReminders() {
                const list = DB.users.filter(u => u.id !== ADMIN_ID);
                Swal.fire({
                    title: 'Kirim Broadcast Jumat?',
                    text: `Pesan akan dikirim ke ${list.length} siswa secara bergantian.`,
                    icon: 'info',
                    showCancelButton: true
                }).then(res => {
                    if(res.isConfirmed) {
                        list.forEach((u, i) => setTimeout(() => this.sendWhatsAppMessage(u.id, DB.bills[u.id]), i * 2000));
                    }
                });
            },

            openPaymentModal() { document.getElementById('modal-bill-amount').textContent = this.formatRupiah(DB.bills[this.currentUser.id]); document.getElementById('pay-amount').value = DB.bills[this.currentUser.id]; document.getElementById('payment-modal').classList.remove('hidden'); },
            closePaymentModal() { document.getElementById('payment-modal').classList.add('hidden'); },
            handleNextPaymentStep(e) { e.preventDefault(); this.pendingPayment = { amount: parseInt(document.getElementById('pay-amount').value), method: document.querySelector('input[name="pay-method"]:checked').value }; this.closePaymentModal(); this.openInstructionModal(this.pendingPayment.method); },
            openInstructionModal(m) { document.getElementById('instruction-content-qris').classList.toggle('hidden', m !== 'QRIS'); document.getElementById('instruction-content-bank').classList.toggle('hidden', m !== 'BANK'); document.getElementById('instruction-modal').classList.remove('hidden'); },
            closeInstructionModal() { document.getElementById('instruction-modal').classList.add('hidden'); },
            closeEditBillModal() { document.getElementById('edit-bill-modal').classList.add('hidden'); },
            simulateWeeklyTrigger() { DB.users.forEach(u => { if(u.id !== ADMIN_ID) DB.bills[u.id] += 5000; }); this.renderAdminDashboard(); Swal.fire('Tagihan Mingguan Ditambah (+5rb)', '', 'success'); }
        };
        app.init();
    </script>
</body>
</html>
